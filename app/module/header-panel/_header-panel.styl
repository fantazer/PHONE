//! block header-panel
.header-panel
	+below(1024px)
		top 100%
	+below(480px)
		//width calc(100% + 10px)
	width 100%
	position absolute
	flex(mid)
	//top 100%
	top 45px
	left 0px
.header-panel__wraper
	+below(768px)
		width 250px
	+below(480px)
		width 100%
		br(0px)
	flex(between)
	width 400px
	background blue
	color white
	box-shadow inset 0 2px 3px rgba(0, 0, 0, 0.15)
	border-radius 0px 0px 5px 5px
	i
		color white 
.header-panel__el
	+below(768px)
		padding 5px
		justify-content flex-start
	flex(between)
	cp()
	up()
	width 50%
	padding 10px
	&:nth-child(1)
		border-right 1px solid #6375bd
.header-panel__text
	+below(1378px)
		font-size 14px
	+below(768px)
		font-size 10px
	+below(480px)
		width 50%
	width 80%
	font-size 16px
	font-weight 100
	margin-left 10px
.header-panel__icon
	+below(768px)
		i
			font-size 14px
	width 20%
	padding 0px 10px
//!block header-panel end