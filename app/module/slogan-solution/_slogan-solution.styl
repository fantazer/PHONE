//! block slogan-solution
.slogan-solution
	margin-bottom 1%
	margin-top 4%
.solution-page__content
	width 100%
	height 100%
	fl()
	flex(mid)
.solution-sound__slider
	width 100%
.slogan-solution__title
	+below(1024px)
		font-size 40px
		margin-top 60px
		margin-bottom 20px
	+below(768px)
		font-size 30px
	color white
	font-size 3vw
	font-weight 900
	text-transform uppercase
	margin-bottom 20px
	text-align center
	margin-top 60px
.slogan-solution__text
	+below(1024px)
		font-size 16px
	+below(768px)
		font-size 10px
	font-size 1vw
	font-weight 400
	text-transform uppercase
	text-align center
	color white
	margin-bottom 5px
.slogan-solution__link
	display inline
	+below(1024px)
		font-size 16px
	+below(768px)
		display block
		a
			margin-top 15px
			margin-bottom 15px
	font-size 1vw
	font-weight 400
	text-transform uppercase
	text-align center
	color white
	color yellow
	margin-top 10px
	a
		color yellow
	.cloud-message
		+below(768px)
			transform translateY(0px)
		transform translateY(-5px)
		
//!block slogan-solution end