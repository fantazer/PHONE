//! block slogan
.slogan
	width 100%
	height 100%
	flex(mid)
	justify-content flex-start
.slogan-btn__row
	+below(480px)
		.btn
			font-size 8px
	+below(768px)
		.btn
			font-size 16px
.slogan__number
	+below(768px)
		font-size 26px 
	font-size 68px
	font-weight 700
	margin-bottom 20px
	color blue  
.slogan__wraper
	text-align left
	margin-left 10%
.slogan-word 
	+below(768px)
		font-size  7vh
	+below(480px)
		font-size  5vh
		
	font-size  10vh
	font-weight  600 
	up()
	color blue 
.slogan-word--last
	position relative
	display inline
.slogan-word__sub
	+below(768px)
		top 100%
		left 0
	+below(480px)
		width 250px
		font-size 12px
	position absolute
	top 28%
	left 105%
	font-size 18px
	width 350px
.slogan-word__sub-el 
	font-weight 300 
	color black
	span
		color blue
//!block slogan end